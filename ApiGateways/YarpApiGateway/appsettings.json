{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "catalog-route": {
        "ClusterId": "catalog",
        "Match": {
          "Path": "/catalog/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          { "PathRemovePrefix": "/catalog" }
        ]
      },
      "basket-route": {
        "ClusterId": "basket",
        "Match": {
          "Path": "/basket/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          { "PathRemovePrefix": "/basket" }
        ]
      }
    },
    "Clusters": {
      "catalog": {
        "Destinations": {
          "dest1": {
            "Address": "http://catalog"
          }
        }
      },
      "basket": {
        "Destinations": {
          "dest1": {
            "Address": "http://basket"
          }
        }
      }
    }
  }
}
